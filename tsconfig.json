{
  "compileOnSave" : true,
  "compilerOptions" : {
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },

  "include": [
    "src/app/**/*"
  ],
  "exclude": [
    "src/app/includes/**",
    "node_modules",
    "bower_components",
    "js"
  ]
}